generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client{
  id String @id @default(cuid())
  name String
  cpf String @unique
  password String
  balance Float

  own Statement[]

  @@map("clients")
}

model Statement{
  id String @id @default(cuid())
  transaction Float
  date DateTime @default(now())

  ownerId String

  own Client @relation(fields: [ownerId], references: [id])

  @@unique([id, ownerId])

  @@map("statement")
}